# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# API Configuration
# For Android Emulator: use 10.0.2.2 (special IP that points to host machine)
# For iOS Simulator: use localhost
# For physical devices: use your computer's IP address
API_BASE_URL=http://10.0.2.2:3000/api/v1
API_BASE_URL_IOS=http://localhost:3000/api/v1

# App Configuration
APP_NAME=Wearly Styles
APP_VERSION=1.0.0
APP_ENV=development

# Authentication
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Feature Flags
ENABLE_DEBUG=true
ENABLE_ANALYTICS=false

# Third-party Services
# Add your service configurations here as needed

# Development
DEV_SERVER_URL=http://10.0.2.2:8081